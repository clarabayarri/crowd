<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" />
		<property name="port" value="587" />
		<property name="username" value="crowdplatform" />
		<property name="password" value="MapucheFringe" />

		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>

	</bean>

	<bean id="mailMail" class="com.crowdplatform.util.MailSender">
		<property name="mailSender" ref="mailSender" />
		<property name="simpleMailMessage" ref="customeMailMessage" />
	</bean>

	<bean id="customeMailMessage" class="org.springframework.mail.SimpleMailMessage">

		<property name="from" value="crowdplatform@gmail.com" />
		<property name="to" value="to@no-spam.com" />
		<property name="subject" value="Crowd Platform password recovery" />
		<property name="text">
			<value>
			<![CDATA[
	Dear %s,
To reset your password, please click on the following link: http://localhost:8080/forgot/%s
				
	Crowd Platform
			]]>
			</value>
		</property>
	</bean>

</beans>